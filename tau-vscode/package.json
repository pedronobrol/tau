{
  "name": "tau-vscode",
  "displayName": "TAU Formal Verification",
  "description": "Automatic formal verification for Python with Claude AI",
  "version": "0.1.0",
  "publisher": "tau",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "python",
    "formal verification",
    "why3",
    "claude",
    "ai"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tau.generateSpecs",
        "title": "TAU: Generate Specifications"
      },
      {
        "command": "tau.verify",
        "title": "TAU: Verify Function"
      },
      {
        "command": "tau.verifyFile",
        "title": "TAU: Verify All Functions in File"
      }
    ],
    "configuration": {
      "title": "TAU",
      "properties": {
        "tau.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "TAU API server URL"
        },
        "tau.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for Claude (used for spec generation)",
          "markdownDescription": "Get your API key from https://console.anthropic.com/"
        },
        "tau.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter with TAU installed"
        },
        "tau.proverTimeout": {
          "type": "number",
          "default": 10,
          "description": "Why3 prover timeout in seconds"
        },
        "tau.autoVerifyOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run verification when file is saved"
        },
        "tau.showInlineSpinner": {
          "type": "boolean",
          "default": true,
          "description": "Show animated spinner during spec generation and verification"
        },
        "tau.statusDisplayMode": {
          "type": "string",
          "enum": ["codelens", "inline"],
          "default": "codelens",
          "description": "How to display verification status",
          "enumDescriptions": [
            "Show status in CodeLens buttons above @safe (monochrome)",
            "Show colored status at end of @safe line (green/red text)"
          ]
        }
      }
    },
    "keybindings": [
      {
        "command": "tau.generateSpecs",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "tau.verify",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && editorLangId == python"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
